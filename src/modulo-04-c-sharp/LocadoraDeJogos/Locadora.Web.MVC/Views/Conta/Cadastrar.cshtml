@model UsuarioCadastroModel
@{
    ViewBag.Title = "Cadastrar-se";
}

<h2>Cadastrar novo usuario</h2>


@using (Html.BeginForm("Salvar", "Conta", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(m => m.NomeCompleto, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.NomeCompleto, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NomeCompleto)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmacaoEmail, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ConfirmacaoEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmacaoEmail)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Senha, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Senha)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.VerificacaoSenha, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.VerificacaoSenha, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.VerificacaoSenha)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}