@model LocarModel
@{
    ViewBag.Title = "Locar";
}

<h1 class="text-center">LOCAÇÃO</h1>
@Html.Partial("Detalhes", @Model);
<br />
<div class="clearfix">
@using (Html.BeginForm("EfetuarLocacao", "Locacao", new { id = @Model.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group pull-left">
        @Html.Label("Cliente", new { @class = "label" })
        <div class="col-sm-10">
            @Html.DropDownList("idCliente", (IEnumerable<SelectListItem>)new SelectList(@Model.Clientes, "Id", "Nome"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group pull-right">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
}
</div>