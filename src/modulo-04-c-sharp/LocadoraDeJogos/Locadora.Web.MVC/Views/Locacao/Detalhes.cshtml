@model LocarModel

@if (@Model.Id == null)
{
    <div class="control-label">
        @Html.Label("Jogo")
        <div class="col-sm-10">
            @Html.DropDownList("Jogos", (IEnumerable<SelectListItem>)new SelectList(@Model.Jogos, "Id", "Nome"), new { @class = "form-control", @onchange = "window.location.href='/Locacao/Locar/'+this.value;" })
        </div>
    </div>
}
else
{
    var jogo = @Model.Jogos.FirstOrDefault(j => j.Id == Model.Id);
    <div style="height: 300px" class="clearfix">
        <div class="pull-left" style="max-width: 400px">
            <img src="@jogo.Imagem" style="max-width: 400px; height: 295px; display: block;" />
        </div>
        <div class="pull-right" style="border: 2px solid black; width: 730px; height: 300px">
            <h1 class="text-center">@jogo.Nome</h1>
            <br />
            <h3 style="margin-left: 20px">Data prevista para entrega : @jogo.DataPrevista.ToString("dd/MM/yyyy")</h3>
            <h3 style="margin-left: 20px">Valor : @jogo.Selo.Preco.ToString("c")</h3>
        </div>
    </div>
}